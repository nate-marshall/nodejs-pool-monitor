{
  "name": "nodejs-pool-monitor",
  "version": "1.0.16",
  "description": "Node.js app for monitoring pool parameters via MQTT.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "lint": "eslint '**/*.js'",
    "test": "mocha",
    "format": "prettier --write '**/*.js'",
    "build": "npm run lint && npm run format && npm run test",
    "release": "standard-version",
    "prepare": "husky install"
  },
  "dependencies": {
    "axios": "^1.7.3",
    "dotenv": "^16.4.5",
    "mqtt": "^5.9.1",
    "winston": "^3.13.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "chai": "^4.3.7",
    "eslint": "^9.9.0",
    "globals": "^15.9.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.10",
    "mocha": "^10.2.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.0.1",
    "standard-version": "^9.5.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
